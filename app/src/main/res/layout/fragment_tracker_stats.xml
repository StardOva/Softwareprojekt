<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/mainToolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textSize="30sp">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/fit_grey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/productNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kalendertag:" />

                <TextView
                    android:id="@+id/DateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="2022-01-30"
                    android:textAlignment="viewEnd"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g100Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wochentag:" />

                <TextView
                    android:id="@+id/WeekDayvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sonntag"
                    android:textAlignment="viewEnd"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gewicht:" />

                <TextView
                    android:id="@+id/weightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="70kg"
                    android:textAlignment="viewEnd"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prgogressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kalorienbedarf erreicht zu:" />

                <TextView
                    android:id="@+id/progressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="70%"
                    android:textAlignment="viewEnd"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin"
                android:text="Nährwerte"
                android:textSize="30dp"

                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/fit_grey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/app_margin">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.05"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/fit_red"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/fit_orange_dark"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/fit_orange_light"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/fit_blue_dark"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/fit_blue_light"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/fit_brown"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/fit_green"></TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:background="@color/fit_grey"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/ckalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:text="Kalorien:" />

                        <TextView
                            android:id="@+id/fatTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"

                            android:text="Fett:" />

                        <TextView
                            android:id="@+id/satfatTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="davon gesättigte Fette:"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/carbTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"

                            android:text="Kohlenhydrate:" />

                        <TextView
                            android:id="@+id/sugarTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="davon Zucker:"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/fiberTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"

                            android:text="Ballast:" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"

                            android:text="Protein:" />

                        <TextView
                            android:id="@+id/saltTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"

                            android:text="Salz:" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ckalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Energie"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:id="@+id/fatValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:id="@+id/satfatValue"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal"

                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/carbValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:id="@+id/sugarValue"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/fiberValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal">

                        </TextView>

                        <TextView
                            android:id="@+id/proteinValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:id="@+id/saltValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Gramm"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"

                            android:text="ckal">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"

                            android:text="g">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="0.2"
                            android:text="g"

                            android:textSize="12dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"

                            android:text="g">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="0.2"
                            android:text="g"

                            android:textSize="12dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"

                            android:text="g"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"

                            android:text="g"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"

                            android:text="g"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="3dp"
                 android:background="@android:color/darker_gray"

                 />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analyse"
                android:textSize="30dp"

                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/fit_grey">

            </View>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="20dp">

            </com.github.mikephil.charting.charts.BarChart>


            <!--<View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                />-->

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </com.github.mikephil.charting.charts.PieChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartfat"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartcarb"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"

                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>