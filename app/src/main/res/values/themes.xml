<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitforFit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fit_orange_light</item>
        <item name="colorPrimaryVariant">@color/fit_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fit_orange_light</item>
        <item name="colorSecondaryVariant">@color/fit_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.FitforFit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.FitforFit.NoActionBar">
       <!-- <item name="android:windowBackground">@color/black</item>-->
        <item name="android:windowBackground">@drawable/splash_screen</item>
         <!--TODO SplashScreen should show logo -->
    </style>

    <style name="Theme.FitforFit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FitforFit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

